<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_landone"
    tools:context=".ui.activity.LoginSignUpActivity">

    <LinearLayout
        android:background="@color/black_trans_50pc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/logo"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_50sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearBottom"
        android:layout_marginLeft="@dimen/landscape_marginLeft"
        android:layout_marginRight="@dimen/landscape_marginRight"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/btnshape"
            android:fontFamily="sans-serif"
            android:text="@string/login"
            android:textColor="@color/gray" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/btnshape"
            android:fontFamily="sans-serif"
            android:text="@string/register"
            android:textColor="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/landscape_marginRight"
        android:layout_marginRight="@dimen/landscape_marginRight"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/continueWithOTP"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/btngradient"
            android:fontFamily="sans-serif"
            android:text="@string/login_with_otp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/continueWithGoogle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:background="@drawable/btngradient"
            android:fontFamily="sans-serif"
            android:text="@string/continue_with_google"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/tv_termsandc_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/terms_and_condition"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>